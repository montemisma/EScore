// Add panel to right of map

var panel = ui.Panel({
  style: {
    width: '115px',
  }
});
ui.root.insert(1, panel);

// Add link to overpass turbo script

var link = ui.Label('Generate overpass turbo script for AoI', {
    fontWeight: 'bold',
    backgroundColor: 'fffb91' 
},url);
